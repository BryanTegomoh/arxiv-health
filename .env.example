# API Keys for AI Summarization
# You only need ONE of these, but can configure multiple

# Gemini (Recommended - Cheapest)
GEMINI_API_KEY=your_gemini_api_key_here

# OpenAI (Alternative)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic Claude (Alternative - Higher Quality)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Grok (Alternative)
GROK_API_KEY=your_grok_api_key_here

# Preferred AI Provider (gemini, openai, claude, grok)
AI_PROVIDER=gemini

# arXiv Search Configuration
MAX_RESULTS_PER_RUN=50
DAYS_TO_LOOK_BACK=7

# Website Configuration
SITE_TITLE=arXiv Health & Medicine Monitor
SITE_DESCRIPTION=AI-curated medical and health research papers from arXiv
